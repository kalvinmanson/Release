<%= form_for(report) do |f| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.select(:user_id, User.all.collect {|a| [a.name, a.id]}, {}, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :comment_id %>
    <%= f.select(:comment_id, Comment.all.collect {|a| [a.id, a.id]}, { include_blank: 'None' }, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :book_id %>
    <%= f.select(:book_id, Book.all.collect {|a| [a.name, a.id]}, { include_blank: 'None' }, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :post_id %>
    <%= f.select(:post_id, Post.all.collect {|a| [a.name, a.id]}, { include_blank: 'None' }, { class: 'form-control' }) -%>
  </div>

  <div class="field">
    <%= f.label :caracter %>
    <%= f.text_field :caracter, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
