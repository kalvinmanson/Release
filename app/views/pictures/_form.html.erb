<%= form_for(picture) do |f| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.select(:user_id, User.all.collect {|a| [a.name, a.id]}, { }, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :book_id %>
    <%= f.select(:book_id, Book.all.collect {|a| [a.name, a.id]}, { include_blank: 'None' }, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :post_id %>
    <%= f.select(:post_id, Post.all.collect {|a| [a.name, a.id]}, { include_blank: 'None' }, { class: 'form-control' }) -%>
  </div>

  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file, class: "form-control" %>
  </div>

  

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
