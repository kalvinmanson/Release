<%= link_to 'New Book', new_book_path, class: "btn btn-primary pull-right" %>

<div class="container">
  <div class="col-sm-4 col-lg-3">
    <h2>Genders</h2>
    <ul>
      <% @genders.each do |gender| %>
      <li><%= gender.name %></li> 
      <% end %>
    </ul>
  </div>
  <div class="col-sm-8 col-lg-9">
    <% @books.each do |book| %>
      <div class="book">
        <%= book.user.name %>
        <h3><%= book.name %></h3>
        <%= image_tag book.cover.url(:thumb) %>
        <%= link_to '<i class="fa fa-eye"></i>'.html_safe, book, class: "btn btn-xs btn-info" %>
      </div>
    <% end %>
    <%= will_paginate @books, renderer: BootstrapPagination::Rails %>
  </div>
</div>