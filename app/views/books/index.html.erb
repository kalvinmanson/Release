<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Collection</th>
      <th>Pages</th>
      <th>Isbn 10</th>
      <th>Isbn 13</th>
      <th>Abstract</th>
      <th>Lang</th>
      <th>Condition</th>
      <th>Stack</th>
      <th>Price</th>
      <th>Tags</th>
      <th>Quality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user %></td>
        <td><%= book.name %></td>
        <td><%= book.slug %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.collection %></td>
        <td><%= book.pages %></td>
        <td><%= book.isbn_10 %></td>
        <td><%= book.isbn_13 %></td>
        <td><%= book.abstract %></td>
        <td><%= book.lang %></td>
        <td><%= book.condition %></td>
        <td><%= book.stack %></td>
        <td><%= book.price %></td>
        <td><%= book.tags %></td>
        <td><%= book.quality %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
