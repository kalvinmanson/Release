<%= link_to 'New Book', new_book_path, class: "btn btn-primary pull-right" %>
<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Publisher</th>
      <th>Collection</th>
      <th>Pages</th>
      <th>Isbn</th>
      <th>Lang</th>
      <th>Condition</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Quality</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.name %></i></td>
        <td><%= book.name %> | <i><%= book.author %><br><small><%= book.slug %></small></td>
        <td><%= book.publisher %></td>
        <td><%= book.collection %></td>
        <td><%= book.pages %></td>
        <td><%= book.isbn_10 %><br><%= book.isbn_13 %></td>
        <td><%= book.lang %></td>
        <td><%= book.condition %></td>
        <td><%= book.stock %></td>
        <td><%= book.price %></td>
        <td><%= book.quality %></td>
        <td>
          <div class="btn-group">
            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, book, class: "btn btn-xs btn-info" %>
            <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_book_path(book), class: "btn btn-xs btn-warning" %>
            <%= link_to '<i class="fa fa-remove"></i>'.html_safe, book, class: "btn btn-xs btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
