<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control input-lg" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :cover %>
        <%= f.file_field :cover, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :publisher %>
        <%= f.text_field :publisher, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :collection %>
        <%= f.text_field :collection, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.label :isbn_10 %>
        <%= f.text_field :isbn_10, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.label :isbn_13 %>
        <%= f.text_field :isbn_13, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :abstract %>
    <%= f.text_area :abstract, class: "form-control froalamin" %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, class: "form-control tagsinput" %>
  </div>

  <% @genders.each do |g| %>
      <%= check_box_tag "book[gender_id][]", g.id, book.genders.include?(g) %>
      <%= label_tag g.name %>
  <% end %>
  
  <div class="row">
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :pages %>
        <%= f.number_field :pages, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :lang %><br />
        <%= f.select :lang, options_for_select([['EspaÃ±ol', 'es'], ['English', 'en']], book.lang), {}, { class: "form-control" } %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
