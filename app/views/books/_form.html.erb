<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publisher %>
    <%= f.text_field :publisher, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :collection %>
    <%= f.text_field :collection, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :pages %>
    <%= f.number_field :pages, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :isbn_10 %>
    <%= f.text_field :isbn_10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :isbn_13 %>
    <%= f.text_field :isbn_13, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :abstract %>
    <%= f.text_area :abstract, class: "form-control froalamin" %>
  </div>

  <div class="form-group">
    <%= f.label :lang %>
    <%= f.text_field :lang, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :condition %>
    <%= f.number_field :condition, class: "form-control" %>
  </div>

  <div class="checkbox">
    <%= f.label :stock do %>
    <%= f.check_box :stock %> In Stock ?
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quality %>
    <%= f.number_field :quality, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
