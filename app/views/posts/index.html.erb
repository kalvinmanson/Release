<div class="container">
  <div class="row">
    <div class="col-sm-9">
          <%= link_to 'New Post', new_post_path, class: "btn btn-primary" if current_user.present? && current_user.rol == "Admin" %>
          <% @posts.each do |post| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <h3 class="titpanel">
                <%= link_to post.name, post %> 
                <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_post_path(post) if current_user.present? && post.user_id == current_user.id %>
              </h3>
              <small></small>
              <%= simple_format(post.description) %>
            </div>
          </div>
          <% end %>
    </div>
    <div class="col-sm-3">
      xxx
    </div>
  </div>
</div>