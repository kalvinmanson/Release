<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Book</th>
      <th>User</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Content</th>
      <th>Description</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.category %></td>
        <td><%= post.book %></td>
        <td><%= post.user %></td>
        <td><%= post.name %></td>
        <td><%= post.slug %></td>
        <td><%= post.content %></td>
        <td><%= post.description %></td>
        <td><%= post.tags %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
