<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Release</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<header>
		<%= render "partials/menu" %>
	</header>
	<%= render "partials/alerts" %>
	<div class="container-fluid">
    	<%= yield %>
    </div>

	<% if current_user.present? && current_user.rol == "Admin" %>
		<li class="dropdown">
	      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
	      <ul class="dropdown-menu">
	        <li><%= link_to('Users', users_path) %></li>
	        <li><%= link_to('Cities', cities_path) %></li>
	        <li><%= link_to('Countries', countries_path) %></li>
	        <li><%= link_to('Books', books_path) %></li>
	        <li><%= link_to('Genders', genders_path) %></li>
	        <li><%= link_to('Categories', categories_path) %></li>
	        <li><%= link_to('Posts', posts_path) %></li>
	        <li><%= link_to('Comments', comments_path) %></li>
	        <li><%= link_to('Pictures', pictures_path) %></li>
	        <li><%= link_to('Paymments', paymments_path) %></li>
	        <li><%= link_to('Addresses', addresses_path) %></li>
	        <li><%= link_to('Ranks', ranks_path) %></li>
	        <li><%= link_to('Reports', reports_path) %></li>
	      </ul>
	    </li>
	<% end %>
  </body>
</html>
