<%= link_to 'New Rank', new_rank_path, class: "btn btn-primary pull-right" %>

<h1>Ranks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Paymment</th>
      <th>User</th>
      <th>Comment</th>
      <th>Rank</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.paymment %></td>
        <td><%= rank.user.name %></td>
        <td><%= rank.comment %></td>
        <td><%= rank.rank %></td>
        <td>
          <div class="btn-group">
            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, rank, class: "btn btn-xs btn-info" %>
            <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_rank_path(rank), class: "btn btn-xs btn-warning" %>
            <%= link_to '<i class="fa fa-remove"></i>'.html_safe, rank, class: "btn btn-xs btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>