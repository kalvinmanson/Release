<p id="notice"><%= notice %></p>

<h1>Ranks</h1>

<table>
  <thead>
    <tr>
      <th>Paymment</th>
      <th>User</th>
      <th>Comment</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.paymment %></td>
        <td><%= rank.user %></td>
        <td><%= rank.comment %></td>
        <td><%= rank.rank %></td>
        <td><%= link_to 'Show', rank %></td>
        <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
        <td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

