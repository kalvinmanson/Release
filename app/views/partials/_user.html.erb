<div class="dise_user">
  <%= link_to image_tag(locals[:user].avatar, class: "img-circle"), locals[:user] if locals[:user].avatar.present? %>
  <h3><%= locals[:user].name %><small><%= locals[:user].slug %></small></h3>
  <ul class="info">
    <li><%= locals[:user].city.name + ", " + locals[:user].city.country.name if locals[:user].city.present? %></li>
    <li>Followers: <%= locals[:user].followers_count %></li>
    <li>Followees: <%= locals[:user].followees_count %></li>
    <li>Gender: <%= locals[:user].gender %></li>
    <li>Birhdate: <%= locals[:user].banned_date %></li>
  </ul>
</div>

<%= link_to 'Edit', edit_user_path(locals[:user]) %> |
<%= link_to 'Back', users_path %>
