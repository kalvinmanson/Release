<div class="side-user">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="usertitle">
        <%= link_to (image_tag locals[:user].photo.url, class: "img-thumbnail pull-left"), locals[:user] %>
        <h3><%= link_to locals[:user].name, locals[:user] %><small><%= locals[:user].slug %></small></h3>
        <%= link_to("Update profile", edit_user_registration_path) if current_user.present? && current_user.id == locals[:user].id %>
      </div>
      <div class="clearfix"></div>
      
      <ul class="list-group">
        <li class="list-group-item"><%= locals[:user].city.name + ", " + locals[:user].city.country.name if locals[:user].city.present? %></li>
        <li class="list-group-item">Followers: <%= locals[:user].followers_count %></li>
        <li class="list-group-item">Books: <%= locals[:user].books.count %></li>
        <li class="list-group-item">Gender: <%= locals[:user].gender %></li>
        <li class="list-group-item">Birhdate: <%= locals[:user].bithdate %></li>
      </ul>
    </div>
  </div>
</div>
